# ===================
# 模型配置
# ===================
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B
RERANKER_MODEL=Qwen/Qwen3-Reranker-8B
EMBEDDING_DIM=4096

# ===================
# Milvus 配置
# ===================
MILVUS_URI=http://127.0.0.1:19530
COLLECTION_NAME=medical_literature

# ===================
# LLM API 配置 (用于答案生成)
# ===================
LLM_API_KEY=your-api-key-here
LLM_BASE_URL=https://api.deepseek.com
LLM_MODEL=deepseek-chat

# ===================
# 检索配置
# ===================
TOP_K=50
RERANK_TOP_K=10
HYBRID_ALPHA=0.7

# ===================
# 分块配置
# ===================
CHUNK_SIZE=512
CHUNK_OVERLAP=64

# ===================
# 日志配置
# ===================
LOG_LEVEL=INFO

# ===================
# MinerU 配置
# ===================
MINERU_BACKEND=hybrid-auto-engine

# ===================
# 性能配置
# ===================
BATCH_SIZE=4
RERANKER_BATCH_SIZE=8
RERANKER_TIMEOUT=2.0

# ===================
# 数据库配置
# ===================
# SQLite（默认）
DATABASE_URL=sqlite:///data/app.db
# PostgreSQL 示例:
# DATABASE_URL=postgresql://user:password@localhost:5432/medical_rag
# MySQL 示例:
# DATABASE_URL=mysql://user:password@localhost:3306/medical_rag

# ===================
# API 认证配置
# ===================
# API Key（逗号分隔多个）
# API_KEYS=sk-xxx,sk-yyy
# 是否强制启用认证（即使没有配置 Key 也拒绝请求）
API_AUTH_ENABLED=false
# 是否从数据库读取 Key（除了环境变量外）
API_AUTH_USE_DB=false
